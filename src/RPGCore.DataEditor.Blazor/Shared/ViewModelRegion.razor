@ChildContent

@using System.ComponentModel

@code {
	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	[Parameter]
	public INotifyPropertyChanged? ViewModel { get; set; }

	protected override void OnInitialized()
	{
		base.OnInitialized();
		if (ViewModel != null)
		{
			ViewModel.PropertyChanged += (o, e) => StateHasChanged();
		}
	}
}
